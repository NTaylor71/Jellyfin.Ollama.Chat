# =============================================================================
# Production RAG System - Environment Configuration
# =============================================================================

# App Environment
ENV=localhost

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_QUEUE=ingestion:queue

# Ollama Services
OLLAMA_INGESTION_BASE_URL=http://localhost:11434
# NOTE: OLLAMA_INGESTION_MODEL moved to YAML config at config/models/ollama_models.yaml
# NOTE: OLLAMA_EMBED_* variables are unused and removed

# FAISS Vector Database
VECTORDB_URL=http://localhost:6333

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_URL=http://localhost:8000

# Jellyfin Integration
JELLYFIN_URL=http://your-jellyfin-server:8096
JELLYFIN_API_KEY=your_api_key_here

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=structured

# Development Features
ENABLE_CORS=true
ENABLE_API_DOCS=true
ENABLE_METRICS=true

# Plugin System
PLUGIN_DIRECTORY=./src/plugins
PLUGIN_HOT_RELOAD=true
